<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 标题栏样式 -->
    <!-- Base application theme. -->
    <declare-styleable name="ToolBar">
        <!-- 左按钮是否可见|背景 -->
        <attr name="leftSrc" format="reference|color" />
        <!-- 左文本内容 -->
        <attr name="leftText" format="string" />
        <attr name="leftColor" format="color" />
        <attr name="leftSize" format="dimension" />
        <!-- 标题文本内容 -->
        <attr name="titleText" format="string" />
        <attr name="titleColor" format="color" />
        <attr name="titleSize" format="dimension" />
        <!-- 标题文本内容 -->
        <attr name="subTitleColor" format="color" />
        <attr name="subTitleSize" format="dimension" />
        <!-- 右文本内容 -->
        <attr name="rightColor" format="color" />
        <attr name="rightSize" format="dimension" />
        <!-- 背景 -->
        <attr name="barBackground" format="reference|color" />
        <!-- appbar高度 -->
        <attr name="barHeight" format="dimension" />
        <!-- divider 颜色 -->
        <attr name="bottomDivider" format="color" />
        <attr name="bottomDividerHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ProgressBar">
        <!-- 默认颜色 -->
        <attr name="progressBarDefaultColor" format="color" />
        <!-- 进度颜色 -->
        <attr name="progressBarProgressColor" format="color" />
        <!-- 已抢圆环光颜色 -->
        <attr name="progressBarOverColor" format="color" />
        <!-- 已抢文字光颜色 -->
        <attr name="progressBarOverTextColor" format="color" />
        <!-- 是否已抢光 -->
        <attr name="progressBarIsOver" format="boolean" />
        <!-- 字体颜色 -->
        <attr name="progressBarTextColor" format="color" />
        <!-- 字体大小 -->
        <attr name="progressBarTextSize" format="dimension" />
        <!-- 进度条宽度 -->
        <attr name="progressBarWidth" format="float" />
        <!-- 最大进度 -->
        <attr name="progressBarMax" format="integer" />
        <!-- 进度百分比 -->
        <attr name="progressBarProgress" format="float" />
        <!-- 进度的风格，实心或者空心 -->
        <attr name="progressBarPaintStyle">
            <enum name="STROKE" value="0" />
            <enum name="FILL" value="1" />
        </attr>

        <!-- 是否显示中间的进度 -->
        <attr name="displayable" format="boolean" />
    </declare-styleable>


    <!-- 左右控件 -->
    <declare-styleable name="LeftRightLayout">
        <attr name="iconImg" format="reference" />
        <attr name="iconFont" format="string" />
        <attr name="iconFontColor" format="color" />
        <attr name="iconFontSize" format="dimension" />
        <attr name="leftTxt" format="string" />
        <attr name="leftTxtColor" format="color" />
        <attr name="leftTxtSize" format="dimension" />
        <attr name="rightTxt" format="string" />
        <attr name="rightTxtColor" format="color" />
        <attr name="rightTxtSize" format="dimension" />
        <attr name="leftRightEnabled" format="boolean" />
        <attr name="enabledColor" format="color" />
        <attr name="arrow" format="reference" />
        <attr name="centerText" format="string" />
    </declare-styleable>
    <declare-styleable name="BubbleView">
        <attr name="arrowWidth" format="dimension" />
        <attr name="angle" format="dimension" />
        <attr name="arrowHeight" format="dimension" />
        <attr name="arrowPosition" format="dimension" />
        <attr name="bubbleColor" format="color" />
        <attr name="arrowCenter" format="boolean" />
        <attr name="arrowLocation" format="enum">
            <enum name="left" value="0x00" />
            <enum name="right" value="0x01" />
            <enum name="top" value="0x02" />
            <enum name="bottom" value="0x03" />
        </attr>
    </declare-styleable>

    <declare-styleable name="CircleTextView">
        <!-- 填充颜色 -->
        <attr name="fillColor" format="reference|color" />
        <!--是否填充-->
        <attr name="isFillColor" format="boolean" />
        <!--描边颜色-->
        <attr name="strokeColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="OverScrollView">
        <attr name="overscrollEnabled" />
    </declare-styleable>

    <declare-styleable name="HorizontalOverScrollView">
        <attr name="overscrollEnabled" />
    </declare-styleable>

    <attr name="overscrollEnabled" format="boolean" />


    <declare-styleable name="TagFlowLayout">
        <attr name="max_select" format="integer"></attr>
        <attr name="tag_gravity">
            <enum name="left" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
        </attr>
    </declare-styleable>


    <declare-styleable name="DropDownMenu">
        <attr name="ddunderlineColor" format="color"/>
        <attr name="dddividerColor" format="color"/>
        <attr name="ddtextSelectedColor" format="color"/>
        <attr name="ddtextUnselectedColor" format="color"/>
        <attr name="ddmenuBackgroundColor" format="color"/>
        <attr name="ddmaskColor" format="color"/>
        <attr name="ddmenuTextSize" format="dimension"/>
        <attr name="ddmenuSelectedIcon" format="reference"/>
        <attr name="ddmenuUnselectedIcon" format="reference"/>
        <attr name="ddmenuMenuHeightPercent" format="float"/>
    </declare-styleable>

</resources>